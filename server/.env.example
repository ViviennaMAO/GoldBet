# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/goldbet

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Gold Price API Configuration

# 主数据源: GoldAPI.io (推荐)
# 注册地址: https://www.goldapi.io/
# 免费额度: 1次/小时 (足够使用)
GOLD_API_KEY=your_goldapi_io_api_key_here

# 备用数据源: Metals.dev (可选)
# 注册地址: https://metals.dev/
# 免费额度: 50次/月
METALS_API_KEY=your_metals_dev_api_key_here

# Luffa Wallet Configuration
LUFFA_APP_ID=your_luffa_app_id
LUFFA_APP_SECRET=your_luffa_app_secret

# Trading Schedule (UTC Time)
MARKET_CLOSE_HOUR=20
MARKET_CLOSE_MINUTE=0

# Cron Job Settings
# GoldAPI.io 免费版限制：1次/小时
# 建议设置为每小时更新一次
PRICE_UPDATE_INTERVAL=0 */1 * * *
SETTLEMENT_CHECK_INTERVAL=0 * * * *
