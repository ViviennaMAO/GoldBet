/* 全局样式 */
page {
  background-color: #000000;
  color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* 容器 */
.container {
  padding: 30rpx 24rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 卡片样式 */
.card {
  background-color: #121212;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #1E1E1E;
}

/* 按钮样式 */
.btn-primary {
  background-color: #3b82f6;
  color: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
}

.btn-primary:active {
  background-color: #2563eb;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #1E1E1E;
  color: #FFFFFF;
  border: 1rpx solid #333;
  border-radius: 20rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.btn-disabled {
  background-color: #1a1a1a;
  color: #444;
  border: none;
}

/* 文本样式 */
.text-primary { color: #FFFFFF; }
.text-blue { color: #3b82f6; }
.text-green { color: #22c55e; }
.text-red { color: #ef4444; }
.text-gold { color: #FFD700; }
.text-gray { color: #888888; }

/* 价格数字样式 */
.price-font {
  font-family: 'Courier New', Courier, monospace;
}

/* 布局工具类 */
.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #1E1E1E;
  margin: 32rpx 0;
}

/* 模拟 Tab 切换引导 */
.mode-selector {
  display: flex;
  background: #121212;
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #1E1E1E;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #888;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.mode-item.active {
  background: #1E1E1E;
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

