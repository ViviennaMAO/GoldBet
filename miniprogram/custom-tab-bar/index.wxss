.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: #121212;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #333333;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
  transition: all 0.2s ease;
  filter: grayscale(1);
  opacity: 0.6;
}

.tab-icon.active {
  filter: grayscale(0);
  opacity: 1;
  transform: scale(1.1);
}

.tab-text {
  font-size: 20rpx;
  font-weight: 600; /* 加粗字体解决单薄问题 */
  letter-spacing: 1rpx;
  text-transform: uppercase; /* 英文大写增加高级感 */
}
