/* pages/leaderboard/leaderboard.wxss */
page {
  background-color: #000000;
}

.tabs {
  display: flex;
  background-color: #121212;
  padding: 12rpx;
  margin-bottom: 32rpx;
  border-radius: 20rpx;
  border: 1rpx solid #1E1E1E;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #888;
  border-radius: 16rpx;
}

.tab-item.active {
  background-color: #1E1E1E;
  color: #FFFFFF;
}

.my-rank {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  background: rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  border-radius: 24rpx;
}

.rank-badge {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-weight: 800;
  font-size: 32rpx;
  background-color: #1a1a1a;
  color: #3b82f6;
}

.rank-info {
  flex: 1;
}

.rank-address {
  font-family: 'Courier New', Courier, monospace;
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.rank-score .score-value {
  font-family: 'Courier New', Courier, monospace;
  font-size: 36rpx;
  font-weight: 800;
  color: #3b82f6;
}

.rank-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #121212;
  margin-bottom: 16rpx;
  border-radius: 24rpx;
  border: 1rpx solid #1E1E1E;
}

.rank-item.top-three {
  border-color: rgba(234, 179, 8, 0.3);
}

.user-address {
  font-family: 'Courier New', Courier, monospace;
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.user-stats {
  font-size: 22rpx;
  color: #444;
}

.btn-refresh {
  background-color: #121212;
  border: 1rpx solid #1E1E1E;
  color: #888;
  margin-top: 48rpx;
}
