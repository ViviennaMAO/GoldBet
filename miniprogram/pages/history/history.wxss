/* pages/history/history.wxss */
page {
  background-color: #000000;
  color: #FFFFFF;
}

.stats-overview {
  margin-bottom: 40rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 32rpx;
  letter-spacing: 1rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #1a1a1a;
  padding: 24rpx 10rpx;
  border-radius: 20rpx;
  border: 1rpx solid #222;
}

.stat-label {
  font-size: 18rpx;
  color: #666;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 800;
  font-family: 'Courier New', Courier, monospace;
}

.stat-number.correct { color: #22c55e; }
.stat-number.accuracy { color: #3b82f6; }
.stat-number.points { color: #eab308; }

.streak-badge {
  margin-top: 24rpx;
  background: rgba(234, 179, 8, 0.1);
  border: 1rpx solid rgba(234, 179, 8, 0.2);
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.streak-text {
  color: #eab308;
  font-weight: 700;
  font-size: 24rpx;
}

/* 记录列表 */
.records-section {
  margin-top: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.section-count {
  font-size: 24rpx;
  color: #444;
}

.record-item {
  background-color: #121212 !important;
  border: 1rpx solid #1e1e1e !important;
  margin-bottom: 32rpx;
  padding: 32rpx !important;
  border-radius: 24rpx !important;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #1e1e1e;
}

.record-date {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.record-status {
  font-size: 20rpx;
  font-weight: 800;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.record-status.settled {
  color: #22c55e;
  background: rgba(34, 197, 94, 0.1);
}

.record-status.pending {
  color: #eab308;
  background: rgba(234, 179, 8, 0.1);
}

/* 预测详情列 */
.prediction-details {
  display: flex;
  margin-bottom: 40rpx;
  gap: 40rpx;
}

.prediction-col {
  flex: 1;
}

.sub-label {
  font-size: 18rpx;
  color: #444;
  font-weight: 700;
  letter-spacing: 2rpx;
  display: block;
  margin-bottom: 12rpx;
}

.value-with-icon {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.pred-val {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
}

/* 价格数据区域 */
.price-details-box {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.price-val {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 700;
  font-family: 'Courier New', Courier, monospace;
}

.price-val.highlight {
  color: #3b82f6;
}

/* 积分徽章 */
.points-badge {
  background: linear-gradient(90deg, #1e1e1e 0%, #121212 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  border: 1rpx solid #222;
}

.points-num {
  color: #eab308;
  font-weight: 800;
  font-size: 22rpx;
  letter-spacing: 1rpx;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #444;
  margin-bottom: 40rpx;
  display: block;
}
